{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@sara/core": ["packages/core/src/index.ts"],
      "@sara/db": ["packages/db/src/index.ts"],
      "@sara/llm": ["packages/llm/src/index.ts"]
    }
  },
  "include": [
    "packages/**/*",
    "netlify/functions/**/*",
    "apps/web/**/*",
    "vite.config.*"
  ]
}
